# Allow access to CSS and JS files
<FilesMatch "\.(css|js)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Allow access to image files
<FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Allow access to font files
<FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Disable directory listings
Options -Indexes 